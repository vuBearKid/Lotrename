<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="link.vu1984.lotrename.HelpActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarBackgroundColor"
        app:theme="@style/VUToolBar"
        app:popupTheme="@style/VUpopupMenuStyle"
        app:subtitleTextAppearance="@style/VUtoolbarSubTitle"
        app:titleTextAppearance="@style/VUtoolbarTitle">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:id="@+id/app_help_container"
        android:layout_below="@+id/toolbar_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/help_viewpager_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbarBackgroundColor"
            android:orientation="horizontal">
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/viewpager_title_selector"
                android:textSize="@dimen/viewpager_title_size"
                android:gravity="center"
                android:text="temp1"/>
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/viewpager_title_selector"
                android:textSize="@dimen/viewpager_title_size"
                android:gravity="center"
                android:text="temp2"/>
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/viewpager_title_selector"
                android:textSize="@dimen/viewpager_title_size"
                android:gravity="center"
                android:text="temp3"/>
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/viewpager_title_selector"
                android:textSize="@dimen/viewpager_title_size"
                android:gravity="center"
                android:text="temp4"/>
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/viewpager_title_selector"
                android:textSize="@dimen/viewpager_title_size"
                android:gravity="center"
                android:text="temp5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbarBackgroundColor"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/help_viewpager_cursor"
                android:scaleType="matrix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/cursor_line"/>
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/help_viewpager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </android.support.v4.view.ViewPager>
    </LinearLayout>



</RelativeLayout>
