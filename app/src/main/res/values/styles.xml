<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">@color/backgroundGreen</item>改变的范围太大，用不上，只能在LAYOUT那里改了-->
    </style>

    <style name="VUTheme" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <!--<item name="android:alertDialogStyle">@style/VUAlertDialog</item>-->
    </style>

    <style name="VUTheme.noActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="VUToolBar" parent="AppTheme">
        <!--<item name="android:background">@color/toolbarBackgroundColor</item>-->
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:textSize">18sp</item>-->
    </style>

    <style name="VUpopupMenuStyle" parent="AppTheme">
        <item name="android:textColor">@color/popupmenu_item_selector</item>
        <item name="android:itemBackground">@color/toolbarBackgroundColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VUtoolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="VUtoolbarSubTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="VUAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/bg_alert_dialog_rectangle</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">@color/warningYellow</item>
    </style>
    <style name="VUDialogFragment" parent="Theme.AppCompat.Dialog.Alert" >
        <item name="android:textSize">12sp</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--<item name="android:background">@drawable/bg_alert_dialog_rectangle</item>-->
        <item name="android:textColor">@color/white</item>
    </style>






</resources>
